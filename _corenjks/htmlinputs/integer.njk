<input type="number"  data-type="integer"  class="form-control form-control-user" 
       name="inp-{{ field.name }}" 
       id="inp-{{ field.name }}" 
       data-foriegnTable="{{ field.foreignTable }}"
       data-foriegnId="{{ field.foreignId }}"
       aria-describedby="{{ field.name }}" value="{{ defaultInteger }}" {% if disabled %}disabled{% endif %}
       {% if field.isRequired %}required{% endif %}>
<span class="text-danger d-none" id="error-{{field.name}}"></span>  
